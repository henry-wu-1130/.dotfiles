{
  "editor.autoIndent": "brackets", // BUG 可能需要搭配 prettier 設定
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false, // 自動偵測 indentation，⚠️ 注意會 override `tabSize`
  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true, // 與字型有關，箭頭 ==> 會連在一起
  "editor.formatOnSave": true,
  "editor.lineHeight": 24,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.rulers": [80, 120],
  "editor.snippetSuggestions": "top",
  "editor.stickyScroll.enabled": true, // 黏性捲動
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.tabSize": 2,
  "editor.useTabStops": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  /*
   * diffEditor
   */
  "diffEditor.ignoreTrimWhitespace": false,
  /*
   * workbench
   */
  "workbench.colorTheme": "In Bed by 7pm",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.panel.defaultLocation": "right",
  /*
   * explore
   */
  "explorer.decorations.badges": true,
  // "emmet.triggerExpansionOnTab": true,
  // "emmet.includeLanguages": {
  //   "javascript": "html"
  // },
  // "emmet.syntaxProfiles": {
  //   "javascript": "html"
  // },
  /*
   * extensions
   */
  "extensions.ignoreRecommendations": true,
  /*
   * eslint
   */
  // "eslint.run": "onSave",
  /*
   * prettier
   */
  "prettier.trailingComma": "es5",
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 80,
  /*
   * language formatter
   */
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  /*
   * html
   */
  "html.format.wrapAttributes": "force-expand-multiline",
  /*
   * JavaScript
   */
  "javascript.updateImportsOnFileMove.enabled": "always",
  /*
   * TypeScript
   */
  "typescript.updateImportsOnFileMove.enabled": "always",
  /**
   * todo-tree
   */
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.highlights.backgroundColourScheme": [
    "#A11E22",
    "#0C6950",
    "#DF6747",
    "#FEBC38",
    "#697F90",
    "#37AFA9",
    "#E0F2F2",
    "#D8C684",
    "#FAAC77"
  ],
  "todo-tree.highlights.foregroundColourScheme": [
    "white",
    "white",
    "white",
    "white",
    "white",
    "white",
    "black"
  ],
  "todo-tree.general.statusBar": "total",
  "todo-tree.general.tags": [
    "BUG",
    "TODO",
    "HELP_WANTED",
    "DEPRECATED",
    "FEATURE",
    "REFACTOR",
    "NOTE",
    "OPTIMIZATION",
    "EXPERIMENTAL"
  ],
  "todo-tree.highlights.customHighlight": {
    "BUG": {
      "icon": "bug"
    },
    "HACK": {
      "icon": "tools"
    },
    "FIXME": {
      "icon": "flame"
    },
    "XXX": {
      "icon": "$(close)"
    }
  },
  /*
   * git
   */
  "git.suggestSmartCommit": false,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "animations.Install-Method": "Apc Customize UI++",
  "update.mode": "manual",
  "window.titleBarStyle": "custom",
  "vscode_vibrancy.opacity": 0.5
  /*
   * terminal
   */
  // "terminal.integrated.enableBell": true,
  // "terminal.integrated.fontWeight": 500,
  // "terminal.integrated.letterSpacing": -1,
}
